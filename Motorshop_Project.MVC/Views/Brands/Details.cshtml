@model MotorShop_Project.Model.Classes.Brand

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>BrandEntity</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Alt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Alt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.HasImage)
            {
                var base64 = Convert.ToBase64String(Model.Image);
                var imageSrc = $"data:{Model.ContentType};base64,{base64}";
                <img src="@imageSrc" alt="@Model.Alt" width="250" />
            }
            else
            {
                <img src="/images/placeholde_img.png" alt="place_holder" width="150" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
