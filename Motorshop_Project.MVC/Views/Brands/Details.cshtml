@model MotorShop_Project.Model.Classes.Brand

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>BrandEntity</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Alt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Alt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            @{
                var imageSrc = Model.GetImgSrc;
                <img src="@(string.IsNullOrEmpty(imageSrc) ? "/images/placeholde_img.png" : imageSrc)"
                     alt="@(string.IsNullOrEmpty(imageSrc) ? "place_holder" : Model.Alt)"
                     width="150" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
