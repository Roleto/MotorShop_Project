@model IEnumerable<MotorShop_Project.Model.Classes.Brand>


@{
    ViewData["Title"] = "Brands_Index";
}

<h1>Brands Overview</h1>

<p>
    <a class="create-link" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alt)
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.Image) *@
                    @if (item.HasImage)
                    {
                        var base64 = Convert.ToBase64String(item.Image);
                        var imageSrc = $"data:{item.ContentType};base64,{base64}";
                        <img src="@imageSrc" alt="@item.Alt" width="150" />
                    }
                    else
                    {
                        <img src="/images/placeholde_img.png" alt="place_holder" width="150" />
                    }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
